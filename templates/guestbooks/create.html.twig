{% extends 'base.html.twig' %}

{% block title %}Create a Guestbook{% endblock %}

{% block body %}
<h1>Create a guestbook</h1>

{{ form_start(form) }}
    {{ form_errors(form.name) }}
    <p class="input-field">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
    </p>

    {{ form_errors(form.color) }}
    <p class="input-field">
        {{ form_label(form.color) }}
        {{ form_widget(form.color) }}
    </p>

    <p>
        <label>
            {{ form_widget(form.confirmEntries, { 'attr': { 'class': 'filled-in' } }) }}
            <span>{{ form_label(form.confirmEntries) }}</span>
        </label>
    </p>

    <p>
        {{ form_row(form.captcha) }}
    </p>
    
    {{ form_row(form.submit, { 'attr': { 'class': 'btn waves-effect waves-light' } }) }}
{{ form_end(form) }}
{% endblock %}
